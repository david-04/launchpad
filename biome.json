{
    "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
    "files": {
        "ignoreUnknown": true
    },
    "linter": {
        "enabled": false
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentStyle": "space",
        "indentSize": 4,
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "quoteProperties": "asNeeded",
            "trailingComma": "es5",
            "semicolons": "always",
            "arrowParentheses": "asNeeded"
        },
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        }
    },
    "json": {
        "parser": {
            "allowComments": true,
            "allowTrailingCommas": false
        }
    },
    "organizeImports": {
        "enabled": false
    },
    "vcs": {
        "enabled": false
    }
}
